<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SummitEntryDetailsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar_main" />

        <ScrollView
            android:id="@+id/scrollMap"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2">


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TableLayout
                    android:id="@+id/table"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:shrinkColumns="*"
                    android:stretchColumns="*">


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/sport_type_image"
                            android:layout_width="50dp"
                            android:layout_height="40dp"
                            android:layout_margin="5dp"
                            android:contentDescription="@string/sport_type_image"
                            android:paddingTop="5dp"
                            android:tag="image_tag" />

                        <TextView
                            android:id="@+id/bookmark_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="10dp"
                            android:layout_toEndOf="@id/sport_type_image"
                            android:textAppearance="?android:attr/textAppearanceLarge" />

                    </RelativeLayout>

                    <GridLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:columnCount="2"
                        android:rowCount="2">

                        <TextView
                            android:id="@+id/height_meterText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:layout_marginStart="20dp"
                            android:drawablePadding="5dp"
                            android:padding="1dp"
                            android:text="@string/height_meter_hint"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            app:drawableStartCompat="@drawable/ic_trending_up_black_24dp" />

                        <TextView
                            android:id="@+id/height_meter"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:layout_marginStart="20dp"
                            android:paddingTop="5dp"
                            android:textAppearance="?android:attr/textAppearanceSmall" />


                        <TextView
                            android:id="@+id/kilometersText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:layout_marginStart="20dp"
                            android:drawablePadding="5dp"
                            android:padding="1dp"
                            android:text="@string/kilometers_hint"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            app:drawableStartCompat="@drawable/icons8_map_pinpoint_20" />

                        <TextView
                            android:id="@+id/kilometers"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:layout_marginStart="20dp"
                            android:paddingTop="5dp"
                            android:textAppearance="?android:attr/textAppearanceSmall" />
                    </GridLayout>

                    <TableRow
                        android:id="@+id/comments_hidden"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical">

                        <TextView
                            android:id="@+id/comments"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:layout_marginStart="20dp"
                            android:drawablePadding="5dp"
                            android:padding="1dp"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            app:drawableStartCompat="@drawable/ic_speaker_notes_black_24dp" />
                    </TableRow>
                </TableLayout>

                <RelativeLayout
                    android:id="@+id/osmap_layout"
                    android:layout_below="@+id/table"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">


                    <de.drtobiasprinz.summitbook.ui.CustomMapViewToAllowSrolling
                        android:id="@+id/osmap"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                    <ImageButton
                        android:id="@+id/change_map_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@id/osmap"
                        android:layout_toStartOf="@id/gps_share"
                        android:contentDescription="@string/map_type"
                        android:src="@drawable/ic_more_vert_black_24dp" />

                    <ImageButton
                        android:id="@+id/gps_share"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@id/osmap"
                        android:layout_toStartOf="@id/gps_open_with"
                        android:contentDescription="@string/action_share"
                        android:src="@drawable/ic_share_black_24dp" />

                    <ImageButton
                        android:id="@+id/gps_open_with"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@id/osmap"
                        android:layout_toStartOf="@id/osm_with_milage"
                        android:contentDescription="@string/open_with"
                        android:src="@drawable/ic_open_in_new_black_24dp" />

                    <ImageButton
                        android:id="@+id/osm_with_milage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@id/osmap"
                        android:layout_alignParentEnd="true"
                        android:contentDescription="@string/show_milage"
                        android:src="@drawable/moreinfo_arrow" />
                </RelativeLayout>
            </RelativeLayout>
        </ScrollView>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>