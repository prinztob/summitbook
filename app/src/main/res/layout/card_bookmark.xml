<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardBackgroundColor="@color/color_white"
    card_view:cardCornerRadius="10dp"
    card_view:cardElevation="5dp"
    card_view:cardUseCompatPadding="true">

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:shrinkColumns="*"
        android:stretchColumns="*">

        <RelativeLayout
            android:id="@+id/card_view_text"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="#80E3CDCD"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/sport_type_image"
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:layout_margin="5dp"
                android:contentDescription="@string/sport_type_image"
                android:paddingTop="5dp"
                android:tag="image_tag" />

            <TextView
                android:id="@+id/bookmark_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:layout_toEndOf="@id/sport_type_image"
                android:textAppearance="?android:attr/textAppearanceLarge" />
        </RelativeLayout>


        <GridLayout
            android:layout_width="381dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:columnCount="2"
            android:rowCount="3">

            <TextView
                android:id="@+id/height_meter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginStart="20dp"
                android:drawablePadding="5dp"
                android:padding="1dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                card_view:drawableStartCompat="@drawable/ic_trending_up_black_24dp" />
            <TextView
                android:id="@+id/kilometers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginStart="20dp"
                android:drawablePadding="5dp"
                android:padding="1dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                card_view:drawableStartCompat="@drawable/icons8_map_pinpoint_20" />

        </GridLayout>


        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@color/colorPrimary">


            <ImageButton
                android:id="@+id/entry_add_coordinate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_marginBottom="5dp"
                android:layout_toStartOf="@id/entry_edit"
                android:background="@color/color_white"
                android:contentDescription="@string/add_coordinate"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                android:src="@drawable/ic_add_location_black_24dp" />

            <ImageButton
                android:id="@+id/entry_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_marginBottom="5dp"
                android:layout_toStartOf="@id/entry_delete"
                android:background="@color/color_white"
                android:contentDescription="@string/edit_icon"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                android:src="@drawable/ic_edit_black_24dp" />

            <ImageButton
                android:id="@+id/entry_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_margin="5dp"
                android:layout_marginBottom="5dp"
                android:background="@color/color_white"
                android:contentDescription="@string/delete_icon"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                android:src="@drawable/ic_delete_black_24dp" />

        </RelativeLayout>

    </TableLayout>

</androidx.cardview.widget.CardView>
