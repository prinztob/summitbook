                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/summit_name_to_compare"
                tools:layout_constraintStart_creator="1">

                <TextView
                    android:id="@+id/tour_date_text"
                    android:layout_width="wrap_content"
                    android:layout_height="27dp"
                    android:layout_gravity="start"
                    android:layout_marginStart="20dp"
                    android:drawablePadding="5dp"
                    android:padding="1dp"
                    android:text="@string/tour_date"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    app:drawableStartCompat="@drawable/baseline_today_black_24dp"
                    app:drawableTint="?android:attr/colorControlNormal"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
