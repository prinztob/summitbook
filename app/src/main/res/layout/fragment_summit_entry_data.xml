            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/expand_more_speed_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginStart="20dp"
                android:clickable="true"
                android:padding="1dp"
                android:text="@string/more_speed"
                android:visibility="gone"
                app:drawableStartCompat="@drawable/ic_baseline_expand_more_24"
                app:drawableTint="?android:attr/colorControlNormal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/constraintLayout" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintLayoutMoreSpeedData"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/expand_more_speed_data"
                tools:layout_constraintStart_creator="1">

                <TextView
                    android:id="@+id/oneKM_top_speedText"
                    android:layout_width="wrap_content"
                    android:layout_height="27dp"
                    android:layout_gravity="start"
                    android:layout_marginStart="20dp"
                    android:drawablePadding="5dp"
                    android:padding="1dp"
                    android:text="@string/top_speed_1km_hint"
