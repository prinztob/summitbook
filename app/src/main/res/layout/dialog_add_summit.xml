<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/rounded_win"
    android:padding="15dp"
    tools:context="de.drtobiasprinz.summitbook.ui.dialog.AddSummitDialog">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp">

        <RelativeLayout
            android:id="@+id/details"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <EditText
                android:id="@+id/tour_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/baseline_today_black_24dp"
                android:drawablePadding="10dp"
                android:ems="6"
                android:hint="@string/tour_date"
                android:importantForAutofill="no"
                android:inputType="date" />

            <ImageButton
                android:id="@+id/add_track_from_garmin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_marginBottom="5dp"
                android:layout_toEndOf="@id/tour_date"
                android:background="@color/color_white"
                android:contentDescription="@string/add_activity"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                android:src="@drawable/baseline_add_location_alt_black_24dp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/loadingPanel"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/details">

            <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:indeterminate="true" />
        </RelativeLayout>

        <AutoCompleteTextView
            android:id="@+id/summit_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/baseline_landscape_black_24dp"
            android:drawablePadding="10dp"
            android:hint="@string/summit_name_hint"
            android:importantForAutofill="no"
            android:inputType="text"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/loadingPanel" />

        <Spinner
            android:id="@+id/activities"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/summit_name" />

        <ImageButton
            android:id="@+id/add_gps_track"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_margin="5dp"
            android:layout_marginBottom="5dp"
            android:background="@color/color_white"
            android:contentDescription="@string/addGpsTrack"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:src="@drawable/ic_baseline_upload_file_24"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/activities" />

        <RelativeLayout
            android:id="@+id/kilometersLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/add_gps_track">

            <EditText
                android:id="@+id/kilometers"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toStartOf="@id/kilometers_text"
                android:drawableStart="@drawable/icons8_map_pinpoint_20"
                android:drawablePadding="10dp"
                android:hint="@string/kilometers_hint"
                android:importantForAutofill="no"
                android:inputType="numberDecimal" />

            <TextView
                android:id="@+id/kilometers_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerInParent="true"
                android:text="@string/km" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/heightMeterLayout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/kilometersLayout">

            <EditText
                android:id="@+id/height_meter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toStartOf="@id/height_meter_text"
                android:drawableStart="@drawable/baseline_trending_up_black_24dp"
                android:drawablePadding="10dp"
                android:hint="@string/height_meter_hint"
                android:importantForAutofill="no"
                android:inputType="number" />

            <TextView
                android:id="@+id/height_meter_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerInParent="true"
                android:text="@string/hm" />
        </RelativeLayout>

        <TextView
            android:id="@+id/expand_more"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawablePadding="10dp"
            android:text="@string/more"
            app:drawableStartCompat="@drawable/ic_baseline_expand_more_24"
            app:drawableTint="?android:attr/colorControlNormal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/heightMeterLayout" />

        <LinearLayout
            android:id="@+id/additional_data_fields_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/expand_more">

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/top_elevation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toStartOf="@id/top_elevation_text"
                    android:drawableStart="@drawable/icons8_mountain_20"
                    android:drawablePadding="10dp"
                    android:hint="@string/top_elevation_hint"
                    android:importantForAutofill="no"
                    android:inputType="number" />

                <TextView
                    android:id="@+id/top_elevation_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerInParent="true"
                    android:text="@string/hm" />
            </RelativeLayout>


            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/pace"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toStartOf="@id/pace_text"
                    android:drawableStart="@drawable/baseline_speed_black_24dp"
                    android:drawablePadding="10dp"
                    android:hint="@string/pace_hint"
                    android:importantForAutofill="no"
                    android:inputType="numberDecimal" />

                <TextView
                    android:id="@+id/pace_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerInParent="true"
                    android:text="@string/kmh" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/top_speed"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toStartOf="@id/top_speed_text"
                    android:drawableStart="@drawable/baseline_speed_black_24dp"
                    android:drawablePadding="10dp"
                    android:hint="@string/top_speed_hint"
                    android:importantForAutofill="no"
                    android:inputType="numberDecimal"
                    android:maxLength="4" />

                <TextView
                    android:id="@+id/top_speed_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerInParent="true"
                    android:text="@string/kmh" />
            </RelativeLayout>

            <!-- PARTICIPANTS START       -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/imageParticipants"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:contentDescription="@string/participants"
                    android:src="@drawable/ic_baseline_people_24" />

                <AutoCompleteTextView
                    android:id="@+id/autoCompleteTextViewParticipants"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/imageParticipants"
                    android:completionThreshold="1"
                    android:hint="@string/participants" />

                <com.google.android.material.chip.ChipGroup
                    android:id="@+id/chipGroupParticipants"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/imageParticipants"
                    android:layout_marginTop="8dp"
                    app:chipSpacingVertical="4dp" />
            </RelativeLayout>
            <!-- PARTICIPANTS END       -->
            <!-- PLACES START       -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/imagePlaces"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:contentDescription="@string/place_hint"
                    android:src="@drawable/baseline_place_black_24dp" />

                <AutoCompleteTextView
                    android:id="@+id/autoCompleteTextViewPlaces"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/imagePlaces"
                    android:completionThreshold="1"
                    android:hint="@string/place_hint" />

                <com.google.android.material.chip.ChipGroup
                    android:id="@+id/chipGroupPlaces"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/imagePlaces"
                    android:layout_marginTop="8dp"
                    app:chipSpacingVertical="4dp" />
            </RelativeLayout>
            <!-- PLACES END       -->
            <!-- COUNTRIES START       -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/imageCountries"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:contentDescription="@string/country_hint"
                    android:src="@drawable/ic_baseline_flag_24" />

                <AutoCompleteTextView
                    android:id="@+id/autoCompleteTextViewCountries"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/imageCountries"
                    android:completionThreshold="1"
                    android:hint="@string/country_hint" />

                <com.google.android.material.chip.ChipGroup
                    android:id="@+id/chipGroupCountries"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/imageCountries"
                    android:layout_marginTop="8dp"
                    app:chipSpacingVertical="4dp" />
            </RelativeLayout>
            <!-- COUNTRIES END       -->
            <!-- EQUIPMENTS START       -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/imageEquipments"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:contentDescription="@string/equipments"
                    android:src="@drawable/ic_baseline_handyman_24" />

                <AutoCompleteTextView
                    android:id="@+id/autoCompleteTextViewEquipments"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/imageEquipments"
                    android:completionThreshold="1"
                    android:hint="@string/equipments" />

                <com.google.android.material.chip.ChipGroup
                    android:id="@+id/chipGroupEquipments"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/imageEquipments"
                    android:layout_marginTop="8dp"
                    app:chipSpacingVertical="4dp" />
            </RelativeLayout>
            <!-- EQUIPMENTS END       -->

            <EditText
                android:id="@+id/comments"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autofillHints="@string/comment_hint"
                android:gravity="top|start"
                android:hint="@string/comment_hint"
                android:inputType="textMultiLine"
                android:lines="3"
                android:maxLines="3"
                android:minLines="3"
                android:scrollbars="vertical" />
        </LinearLayout>

        <TextView
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/additional_data_fields_view"
            android:id="@+id/expand_more_performance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawablePadding="10dp"
            android:text="@string/more_performance"
            app:drawableStartCompat="@drawable/ic_baseline_expand_more_24"
            app:drawableTint="?android:attr/colorControlNormal" />

        <LinearLayout
            android:id="@+id/performance_data_fields_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/expand_more_performance"
            android:orientation="vertical"
            android:visibility="gone">

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/calories_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerInParent="true"
                    android:text="@string/calories" />

                <EditText
                    android:id="@+id/calories"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/calories_text"
                    android:hint="@string/calories"
                    android:importantForAutofill="no"
                    android:inputType="number" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/averageHr_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerInParent="true"
                    android:text="@string/average_hr" />

                <EditText
                    android:id="@+id/averageHr"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toStartOf="@+id/averageHr_unit"
                    android:layout_toEndOf="@+id/averageHr_text"
                    android:hint="@string/average_hr"
                    android:importantForAutofill="no"
                    android:inputType="number" />

                <TextView
                    android:id="@+id/averageHr_unit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerInParent="true"
                    android:text="@string/bpm" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/maxHr_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerInParent="true"
                    android:text="@string/max_hr" />

                <EditText
                    android:id="@+id/maxHr"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toStartOf="@+id/maxHr_unit"
                    android:layout_toEndOf="@+id/maxHr_text"
                    android:hint="@string/max_hr"
                    android:importantForAutofill="no"
                    android:inputType="number" />

                <TextView
                    android:id="@+id/maxHr_unit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerInParent="true"
                    android:text="@string/bpm" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/ftp_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerInParent="true"
                    android:text="@string/ftp" />

                <EditText
                    android:id="@+id/ftp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toStartOf="@+id/ftp_unit"
                    android:layout_toEndOf="@+id/ftp_text"
                    android:hint="@string/ftp"
                    android:importantForAutofill="no"
                    android:inputType="number" />

                <TextView
                    android:id="@+id/ftp_unit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerInParent="true"
                    android:text="@string/watt" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/vo2Max_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerInParent="true"
                    android:text="@string/vo2Max" />

                <EditText
                    android:id="@+id/vo2Max"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/vo2Max_text"
                    android:hint="@string/vo2Max"
                    android:importantForAutofill="no"
                    android:inputType="numberDecimal" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/normPower_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerInParent="true"
                    android:text="@string/normalized_power" />

                <EditText
                    android:id="@+id/normPower"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toStartOf="@+id/normPower_unit"
                    android:layout_toEndOf="@+id/normPower_text"
                    android:hint="@string/normalized_power"
                    android:importantForAutofill="no"
                    android:inputType="number" />

                <TextView
                    android:id="@+id/normPower_unit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerInParent="true"
                    android:text="@string/watt" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/avgPower_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerInParent="true"
                    android:text="@string/average_power" />

                <EditText
                    android:id="@+id/avgPower"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toStartOf="@+id/avgPower_unit"
                    android:layout_toEndOf="@+id/avgPower_text"
                    android:hint="@string/average_power"
                    android:importantForAutofill="no"
                    android:inputType="number" />

                <TextView
                    android:id="@+id/avgPower_unit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerInParent="true"
                    android:text="@string/watt" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/power_1s_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerInParent="true"
                    android:text="@string/power_1sec" />

                <EditText
                    android:id="@+id/power1s"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toStartOf="@+id/power_1s_unit"
                    android:layout_toEndOf="@+id/power_1s_text"
                    android:hint="@string/power_1sec"
                    android:importantForAutofill="no"
                    android:inputType="number" />

                <TextView
                    android:id="@+id/power_1s_unit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerInParent="true"
                    android:text="@string/watt" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/power_2s_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerInParent="true"
                    android:text="@string/power_2sec" />

                <EditText
                    android:id="@+id/power2s"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toStartOf="@+id/power_2s_unit"
                    android:layout_toEndOf="@+id/power_2s_text"
                    android:hint="@string/power_2sec"
                    android:importantForAutofill="no"
                    android:inputType="number" />

                <TextView
                    android:id="@+id/power_2s_unit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerInParent="true"
                    android:text="@string/watt" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/power_5s_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerInParent="true"
                    android:text="@string/power_5sec" />

                <EditText
                    android:id="@+id/power5s"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toStartOf="@+id/power_5s_unit"
                    android:layout_toEndOf="@+id/power_5s_text"
                    android:hint="@string/power_5sec"
                    android:importantForAutofill="no"
                    android:inputType="number" />

                <TextView
                    android:id="@+id/power_5s_unit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerInParent="true"
                    android:text="@string/watt" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/power_10s_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerInParent="true"
                    android:text="@string/power_10sec" />

                <EditText
                    android:id="@+id/power10s"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toStartOf="@+id/power_10s_unit"
                    android:layout_toEndOf="@+id/power_10s_text"
                    android:hint="@string/power_10sec"
                    android:importantForAutofill="no"
                    android:inputType="number" />

                <TextView
                    android:id="@+id/power_10s_unit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerInParent="true"
                    android:text="@string/watt" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/power_20s_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerInParent="true"
                    android:text="@string/power_20sec" />

                <EditText
                    android:id="@+id/power20s"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toStartOf="@+id/power_20s_unit"
                    android:layout_toEndOf="@+id/power_20s_text"
